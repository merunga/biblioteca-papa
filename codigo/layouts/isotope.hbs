---
layout: default
---

{{#if page.filterBy}}

{{/if}}

{{#each page.filterBy}}
  <div class="row">
  <b>{{this}}</b>
    <button id="filter-ALL">TODAS</button>
  {{#eachCollectFieldValue ../page.variedades this}}
    <button id="{{slugifyEach this (concat "filter-" ../this "-") }}">
      {{humanize this}}
    </button>
  {{/eachCollectFieldValue}}
  </div>
{{/each}}

<div class="row">
  <div id="{{page.containerId}}" class="js-isotope"
  data-isotope-options='{
    "columnWidth": 200,
    "itemSelector": "{{page.itemSelector}}"
  }'>
  {{#eachInField page page.itemsField}}
    {{> body}}
  {{/eachInField}}
  </div>
</div>
