---
layout: default
---

<h1>{{page.nombre}}</h1>

<img src="fotos/{{slugify page.nombre}}.jpg">

<h2>Ingredientes</h2>
<ul>
{{#each page.ingredientes}}
  <li>
    {{#isObject this}}
      <h3>{{firstKey this}}</h3>
      <ul>
        {{#each this}}
          <li>{{this}}</li>
        {{/each}}
      </ul> 
    {{else}}
      {{this}}
    {{/isObject}}
  </li>
{{/each}}
</ul>

<h2>Preparaci√≥n</h2>
<ul>
{{#each page.preparacion}}
  <li>
    {{#isObject this}}
      <h3>{{firstKey this}}</h3>
      <ul>
        {{#each this}}
          <li>{{this}}</li>
        {{/each}}
      </ul> 
    {{else}}
      {{this}}
    {{/isObject}}
  </li>
{{/each}}
</ul>

{{#if page.notas}}
  <h2>Notas</h2>
  <ul>
  {{#each page.notas}}
    <li>{{this}}</li>
  {{/each}}
  </ul>
{{/if}}

<h2>Lugar</h2>
{{page.lugar}}


{{> body}}
